    mixin gmailIcon(link)
      .followBtn__linkWrap
        a.socialList__link(href=`${link}` target="_blank")
          svg.socialList__icon._fillGmail(viewBox="0 0 16 16" stroke="currentColor" stroke-width="0" stroke-linecap="round" stroke-linejoin="round" )
            path(fill="#ECEFF1" d="M2 2h12v12H2z")
            path(fill="#CFD8DC" d="M8 9.262 14 14V4.646z")
            path(d="M14.5 2H14L8 6.738 2 2h-.5A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14H2V4.646l6 4.615 6-4.616V14h.5a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2z")
    
    //- Lines Number (Mixin)
    mixin followBtnLineMix(lineItemsCount)
      .followBtn__line
        - var lineItemsNumber = 1;
        while lineItemsNumber <= `${lineItemsCount}`
          .followBtn__item(id=`_${lineItemsNumber++}`)
    
    //- Add Links to SVG Icons (Mixin)
    mixin socialLinksCollection()
      +devToIcon('https://dev.to/kerthin')
      +githubIcon('https://github.com/Kerthin')
      +codepenIcon('https://codepen.io/RodenKerthin')
      +twitterIcon('https://twitter.com/BelichenkoRoden')
      +gmailIcon('mailto:belichenko.roden.dev@gmail.com')

    //- Button (Mixin)
    mixin followBtnMix(btnMod, followItemNumber, btnName)
      button.followBtn(class=`${btnMod}`)
        +followBtnLineMix(`${followItemNumber}`)
        +followBtnLineMix(`${followItemNumber}`)
        .followBtn__text #{btnName}
        .followBtn__socialWrap
          +socialLinksCollection()

    //- Create Buttons
    +followBtnMix('', 10, 'Follow')
    +followBtnMix('_shadow', 10, 'Follow')